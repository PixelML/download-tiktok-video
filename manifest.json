{
	"name": "TikTok Download Buttons",
	"description": "Adds download buttons to TikTok videos",
	"author": "emy",
	"manifest_version": 3,
	"version": "1.0.0",
	"homepage_url": "https://github.com/sixem/tiktok-download-buttons",
	"icons": {
		"48": "48.png",
		"128": "128.png"
	},
	"content_scripts": [{
		"matches": ["https://tiktok.com/*", "https://www.tiktok.com/*"],
		"js": ["main.js"],
		"css": ["main.css"],
		"run_at": "document_end"
	}],
	"host_permissions": [
		"*://*.tiktok.com/*",
		"https://tiktok.com/*"
	]
}
